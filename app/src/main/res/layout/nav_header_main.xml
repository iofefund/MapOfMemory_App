<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="#424f0b"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#424f0b"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        >
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle3"
            android:layout_width="70dp"
            android:layout_height="70dp">
            <TextView
                android:gravity="center"
                android:textColor="#bbc884"
                android:text="Карта памяти"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Данные обновлены\n28.01.2018 20:05"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/header"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"
            android:text="Некрополь террора и гулага"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"/>
    <TextView
        android:layout_margin="8dp"
        android:id="@+id/name"
        android:gravity="left|bottom"
        android:textColor="@android:color/white"
        android:text="Левашово"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <LinearLayout
        android:visibility="gone"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/place_title"
            android:gravity="center_horizontal"
            android:textSize="24dp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:text="Мемориальный комплекс"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="2dp"
            android:background="@android:color/darker_gray"/>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner"
            app:ms_background_color="@color/colorPrimary"
            app:ms_text_color="@android:color/white"

            android:layout_width="match_parent"
            android:layout_height="25dp"/>
    </LinearLayout>
</LinearLayout>
