<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/block"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_above="@+id/offBlock"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="145dp">
            <ProgressBar
                android:layout_centerInParent="true"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_centerInParent="true"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image"
                android:layout_height="145dp"
                android:layout_width="145dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="8dp"
                app:riv_border_width="0dip"
                app:riv_border_color="#333333"
                app:riv_mutate_background="true"
                app:riv_tile_mode="repeat"
                app:riv_oval="false" />
        </RelativeLayout>
        <LinearLayout
            android:padding="6dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="145dp">
            <TextView
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="asfasasfas"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/descr"
                android:layout_marginTop="7dp"
                android:textSize="14dp"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:text="Лесное урочище в Медвежьегорском районе Республики Карелия в 12 км от Медвежьегорска по А112"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
        <RelativeLayout
            android:id="@+id/offBlock"
            android:layout_alignParentBottom="true"
            android:background="@android:color/holo_green_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:text="Разрешено для использования офлайн"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>