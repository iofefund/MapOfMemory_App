<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.mapofmemory.screens.menu.MenuActivity">
    <LinearLayout
        android:background="#424f0b"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:gravity="left"
        android:paddingLeft="45dp"
        >
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle3"
            android:layout_width="90dp"
            android:layout_height="90dp">
            <TextView
                android:gravity="center"
                android:textColor="#bbc884"
                android:text="Карта памяти"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/status"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="Данные обновлены\n28.01.2018 20:05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="centerCrop"
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/header"
            android:textSize="28dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"
            android:text="Некрополь террора и гулага"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/header"
            android:layout_above="@+id/block"
            android:padding="8dp"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/block"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:padding="4dp"
            >
            <Button
                android:text="О нас"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginLeft="50dp"
                android:text="На сайт"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
